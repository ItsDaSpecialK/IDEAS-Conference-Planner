<Page x:Class="IDEAS_Conference_Planner.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IDEAS_Conference_Planner.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="HomePage">

    <Grid>
        <Grid HorizontalAlignment="Center" Height="50" Margin="0,10,0,0" VerticalAlignment="Top" Width="100">
            <Label Content="Home" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
            <Image HorizontalAlignment="Right" Height="30" Margin="0,5,5,0" VerticalAlignment="Top" Width="30"/>
            <Rectangle Fill="Black" Height="2" Margin="-60,0,-60,0" Stroke="Black" VerticalAlignment="Bottom"/>
        </Grid>
        <Button Style="{StaticResource MainButton}" Content="Presentation" HorizontalAlignment="Left" Margin="70,0,0,0" VerticalAlignment="Center"/>
        <Button Style="{StaticResource MainButton}" Content="Attendees" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"/>
        <Button Style="{StaticResource MainButton}" Content="Mail" HorizontalAlignment="Right" Margin="0,0,70,0" VerticalAlignment="Center"/>
    </Grid>
</Page>
