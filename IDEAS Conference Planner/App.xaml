<Application x:Class="IDEAS_Conference_Planner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IDEAS_Conference_Planner"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MainButton" TargetType="Button">
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Width="150" Height="160" VerticalAlignment="Center" HorizontalAlignment="Center" Background="AliceBlue">
                            <TextBlock Text="{Binding Path=Content, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
